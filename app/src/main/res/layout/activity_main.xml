<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_colors"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/expression"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/almost_white"
        android:text="0"
        android:maxLength="9"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:singleLine="true"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:background="@color/almost_white"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_clear"
            style="@style/operators_button"
            android:layout_weight="3"
            android:text="AC"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_division"
            style="@style/operators_button"
            android:text="/"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_seven"
            style="@style/numbers_button"
            android:text="7"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_eight"
            style="@style/numbers_button"
            android:text="8"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_nine"
            style="@style/numbers_button"
            android:text="9"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_multiply"
            style="@style/operators_button"
            android:text="*"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_four"
            style="@style/numbers_button"
            android:text="4"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_five"
            style="@style/numbers_button"
            android:text="5"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_six"
            style="@style/numbers_button"
            android:text="6"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_minus"
            style="@style/operators_button"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_one"
            style="@style/numbers_button"
            android:text="1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_two"
            style="@style/numbers_button"
            android:text="2"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_three"
            style="@style/numbers_button"
            android:text="3"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_plus"
            style="@style/operators_button"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_dot"
            style="@style/numbers_button"
            android:text="."/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_number_0"
            style="@style/numbers_button"
            android:text="0"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_backspace"
            style="@style/numbers_button"
           android:src="@drawable/backspace"
            android:scaleType="center"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_equals"
            style="@style/operators_button"
            android:text="="/>

    </LinearLayout>

</LinearLayout>