<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#94A1A6"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edit_text_input"
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_height="200dp"
        android:layout_marginLeft="@dimen/final_margin"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/global_margin"
        android:gravity="bottom"
        android:inputType="number"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="@dimen/text_show_size"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:id="@+id/ac_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_input">

        <Button
            android:id="@+id/btn_ac"
            android:layout_width="@dimen/btn_large_width"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"

            android:text="AC"
            android:textSize="@dimen/font_size" />

        <Button
            android:id="@+id/btn_divisor"
            android:layout_width="@dimen/btn_global_width"
            android:layout_height="75dp"
            android:layout_marginLeft="@dimen/final_margin"
            android:text="/"
            android:textSize="@dimen/font_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ac_linear_layout">


        <Button
            android:id="@+id/btn_07"
            android:layout_width="@dimen/btn_global_width"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:text="7"
            android:textSize="@dimen/font_size" />

        <Button
            android:id="@+id/btn_08"
            android:layout_width="@dimen/btn_global_width"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:text="8"
            android:textSize="@dimen/font_size" />

        <Button
            android:id="@+id/btn_09"
            android:layout_width="@dimen/btn_global_width"
            android:layout_height="75dp"
            android:layout_marginLeft="@dimen/global_margin"
            android:layout_marginRight="@dimen/global_margin"
            android:text="9"
            android:layout_marginStart="5dp"
            android:textSize="@dimen/font_size" />

        <Button
            android:id="@+id/btn_multiply"
            android:layout_width="@dimen/btn_global_width"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"

            android:text="*"
            android:textSize="@dimen/font_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_multiply">

        <Button
            android:id="@+id/btn_04"
            android:layout_width="@dimen/btn_global_width"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:text="4"
            android:textSize="@dimen/font_size" />

        <Button
            android:id="@+id/btn_05"
            android:layout_width="@dimen/btn_global_width"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:text="5"
            android:textSize="@dimen/font_size" />

        <Button
            android:id="@+id/btn_06"
            android:layout_width="@dimen/btn_global_width"
            android:layout_height="75dp"
            android:layout_marginLeft="@dimen/global_margin"
            android:layout_marginRight="@dimen/global_margin"
            android:text="6"
            android:layout_marginStart="5dp"
            android:textSize="@dimen/font_size" />

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="@dimen/btn_global_width"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:text="-"
            android:textSize="@dimen/font_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_minus"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_01"
            android:layout_width="@dimen/btn_global_width"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:text="1"
            android:textSize="@dimen/font_size" />

        <Button
            android:id="@+id/btn_02"
            android:layout_width="@dimen/btn_global_width"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:text="2"
            android:textSize="@dimen/font_size" />

        <Button
            android:id="@+id/btn_03"
            android:layout_width="@dimen/btn_global_width"
            android:layout_height="75dp"
            android:layout_marginLeft="@dimen/global_margin"
            android:layout_marginRight="@dimen/global_margin"
            android:text="3"
            android:layout_marginStart="5dp"
            android:textSize="@dimen/font_size" />

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="@dimen/btn_global_width"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:text="+"
            android:textSize="@dimen/font_size" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layout_equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_plus"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_0"
            android:layout_width="@dimen/btn_large_width"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:text="0"
            android:textSize="@dimen/font_size" />-->


        <Button
            android:id="@+id/btn_equals"
            android:layout_width="@dimen/btn_global_width"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:text="="
            android:textSize="@dimen/font_size" />

    </LinearLayout>


</RelativeLayout>